<h2>Set your password</h2>

<%= simple_form_for(resource, :as => resource_name, :url => invitation_path(resource_name), :html => {:method => :put, :class => 'form-horizontal'}) do |f| %>
    <%= f.error_notification %>
    <%= f.hidden_field :invitation_token %>
    <div class="inputs">
      <%= f.input :password, :autocomplete => "off", :required => true %>
      <%= f.input :password_confirmation, :required => true %>
      <%= f.input :organization if resource.recruiter? %>
      <%= f.input :timezone, :as => :time_zone %>
    </div>

    <div class="actions">
      <%= f.button :submit, "Set My Password" %>
    </div>

<% end %>
