<% title 'New Problem' %>

<ul class="breadcrumb">
  <li>
    <%= link_to ( t 'title.home' ), root_path %> <span class="divider">/</span>
  </li>
  <li>
    <%= link_to ( t 'title.problem' ), problems_path %> <span class="divider">/</span>
  </li>
  <li class="active"><%= t 'title.new.problem' %></li>
</ul>

<ul class="nav nav-tabs" id="problem_type_tab">
  <li class="active"><a href="#code_problem"><%= t 'title.code_problem' %></a></li>
  <li><a href="#problem"><%= t 'title.problem' %></a></li>
</ul>

<div class="tab-content">
   <div class="tab-pane active" id="code_problem">
    <%= render :partial => 'code_problems/new_form' %>
  </div>
  <div class="tab-pane" id="problem">
    <%= render 'form' %>
  </div>
</div>

<script type="text/javascript">
    jQuery(document).ready(function ($) {
        $('#problem_type_tab a').click(function (e) {
            e.preventDefault();
            $(this).tab('show');
        })
    });
</script>
