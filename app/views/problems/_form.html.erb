<h3><%= t 'title.new.problem' %></h3>

<%= simple_form_for(@problem, :html => {:class => 'form-horizontal'}) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :name, :hint => '(no special character)' %>
      <%= f.input :statement, :label => 'Statement', input_html: { class: 'redactor' } %>
      <%= f.input :score %>
      <%= f.input :output %>
    </div>

    <br/>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
<% end %>
